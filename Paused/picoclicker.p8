-- objects
-- player
function make_player(x,y,sp)
 player={}
 player.x=x
 player.y=y
 player.s=sp
 return player
end

-- money
money={
  n=0,
  k=0,
  m=0,
  addmoney=function(self, amount)
    -- Works for now but can be broken.
    if amount<=1000 then
      self.n+=amount
      if self.n>=1000 then
        k=flr(self.n/1000)
        self.k+=k
        self.n-=k*1000
      end
    elseif amount>1000 then
      k=flr(amount/1000)
      self.k+=k
      rest=amount-k*1000
      self.addmoney(self, rest)
    end
  end
}

-- upgrades
function make_upgrade(x,y,w,h,s,cost,earn,inc)
 local u={}
 u.x=x
 u.y=y
 u.w=w
 u.h=h
 u.s=s
 u.cost=cost -- price
 u.earn=earn -- money per cycle
 u.inc=inc -- cost increase e.g. cost*1.95
 add(upgrades,u)
end

